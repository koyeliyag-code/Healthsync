# HealthSync Backend Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Configuration (optional - uses in-memory store if omitted)
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/
MONGODB_DB=healthsync

# JWT Secret for authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=change-this-secret-to-a-random-string

# Server Configuration
PORT=4000
NODE_ENV=development

# Socket.IO Configuration
ENABLE_SOCKETS=false
FRONTEND_URL=http://localhost:3000

# Groq AI Configuration (REQUIRED for patient chat feature)
# Get your API key from: https://console.groq.com
GROQ_API_KEY=your-groq-api-key-here

# SerpAPI Configuration (optional - for research papers feature)
# Get your API key from: https://serpapi.com
SERPAPI_KEY=your-serpapi-key-here
